{% extends 'base/_layout.twig' %}

{% block content %}

<!-- CONTENT BEGIN -->
<div id="content" class="right_sidebar">
    <div class="inner">
        <div class="general_content">
            <div class="main_content">
                <div class="separator" style="height:37px;"></div>
                
                <div class="block_blog_post_type_1">
                    <article>
                        <div class="info">
                            <a href="#" class="date"><span>{{ post.created_month }} {{ post.created_day }}</span>{{ post.created_year }}</a>
                            <div class="clearboth"></div>
                        </div>
                        
                        <div class="content">
                            
                            <h4 style="padding-top: 0;">{{ post.name }}</h4>
                        
                            <div>
                            {{ post.content | raw }}
                            </div>

                        </div>
                        
                        <div class="clearboth"></div>
                    </article>
                </div>                
            </div>
            
            <div class="sidebar">               
                
                <div class="separator" style="height:38px;"></div>
                
                <div class="block_categories">
                    <h6>Категории</h6>
                    <ul class="list_5">
                    {% for ctg in ctgs %}
                        <li><a href="{{ ctg.alias }}">{{ ctg.name }}</a> ({{ ctg.posts_count }})</li>
                    {% endfor %}
                    </ul>
                </div>
                
            </div>
            
            <div class="clearboth"></div>
        </div>
    </div>
</div>
<!-- CONTENT END -->

{% endblock content %}